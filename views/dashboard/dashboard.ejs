<%- include ("../layouts/dashboard/header") %>


<main class="pt-5">
    <div class="container w-100">
        <div class="row my-5">
            <div class="col-12">
                <div class="send_product_form_container">
                    <div class="card">
                        <div class="card-body">

                            <% if ( sessionFlash && sessionFlash.type == 'addSuccessMsg') { %>
