                                    jQuery(document).ready(function () {
                                        toastr.options = {
                                            "closeButton": false,
                                            "debug": false,
                                            "newestOnTop": false,
                                            "progressBar": true,
                                            "positionClass": "md-toast-bottom-left",
                                            "preventDuplicates": false,
                                            "onclick": null,
                                            "showDuration": 300,
                                            "hideDuration": 1000,
                                            "timeOut": 5000,
                                            "extendedTimeOut": 1000,
                                            "showEasing": "swing",
                                            "hideEasing": "linear",
                                            "showMethod": "fadeIn",
                                            "hideMethod": "fadeOut"
                                        };
                                        toastr.success(addSuccessMsg);
                                    });
                                </script>
                            <% } %>
